{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/ministryofjustice/opg-data-lpa-store/d5d81b6df9a89aaa4c3634bfca31bfa3c1b1fd0d/docs/schemas/2024-10/donor-details.json",
  "description": "The data that should be provided when an LPA is executed",
  "type": "object",
  "required": [
    "lpaType",
    "channel",
    "donor",
    "attorneys",
    "certificateProvider",
    "signedAt"
  ],
  "properties": {
    "lpaType": {
      "type": "string",
      "enum": ["property-and-affairs", "personal-welfare"]
    },
    "channel": {
      "type": "string",
      "enum": ["paper", "online"]
    },
    "donor": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/ministryofjustice/opg-data-lpa-store/d5d81b6df9a89aaa4c3634bfca31bfa3c1b1fd0d/docs/schemas/2024-10/person.json"
        }
      ],
      "type": "object",
      "required": ["dateOfBirth", "email"],
      "properties": {
        "dateOfBirth": {
          "type": "string",
          "format": "date"
        },
        "email": {
          "type": "string",
          "x-faker": "internet.email"
        },
        "otherNamesKnownBy": {
          "type": "string",
          "x-faker": "name.findName"
        },
        "contactLanguagePreference": {
          "type": "string",
          "enum": ["en", "cy"]
        }
      }
    },
    "attorneys": {
      "type": "array",
      "items": {
        "$ref": "https://raw.githubusercontent.com/ministryofjustice/opg-data-lpa-store/d5d81b6df9a89aaa4c3634bfca31bfa3c1b1fd0d/docs/schemas/2024-10/attorney.json"
      },
      "minLength": 1
    },
    "trustCorporations": {
      "type": "array",
      "items": {
        "$ref": "https://raw.githubusercontent.com/ministryofjustice/opg-data-lpa-store/d5d81b6df9a89aaa4c3634bfca31bfa3c1b1fd0d/docs/schemas/2024-10/trust-corporation.json"
      }
    },
    "certificateProvider": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/ministryofjustice/opg-data-lpa-store/d5d81b6df9a89aaa4c3634bfca31bfa3c1b1fd0d/docs/schemas/2024-10/person.json"
        }
      ],
      "type": "object",
      "required": ["phone", "channel"],
      "if": {
        "required": ["channel"],
        "properties": {
          "channel": { "const": "online" }
        }
      },
      "then": {
        "required": ["email"]
      },
      "properties": {
        "email": {
          "type": "string",
          "x-faker": "internet.email"
        },
        "phone": {
          "type": "string",
          "x-faker": "phone.number"
        },
        "channel": {
          "type": "string",
          "enum": ["paper", "online"]
        }
      }
    },
    "peopleToNotify": {
      "type": "array",
      "items": {
        "$ref": "https://raw.githubusercontent.com/ministryofjustice/opg-data-lpa-store/d5d81b6df9a89aaa4c3634bfca31bfa3c1b1fd0d/docs/schemas/2024-10/person-to-notify.json"
      }
    },
    "howAttorneysMakeDecisions": {
      "type": "string",
      "enum": [
        "jointly",
        "jointly-and-severally",
        "jointly-for-some-severally-for-others"
      ]
    },
    "howAttorneysMakeDecisionsDetails": {
      "type": "string"
    },
    "howReplacementAttorneysMakeDecisions": {
      "type": "string",
      "enum": [
        "jointly",
        "jointly-and-severally",
        "jointly-for-some-severally-for-others"
      ]
    },
    "howReplacementAttorneysMakeDecisionsDetails": {
      "type": "string"
    },
    "howReplacementAttorneysStepIn": {
      "type": "string",
      "enum": ["all-can-no-longer-act", "one-can-no-longer-act", "another-way"]
    },
    "howReplacementAttorneysStepInDetails": {
      "type": "string"
    },
    "whenTheLpaCanBeUsed": {
      "type": "string",
      "enum": ["when-capacity-lost", "when-has-capacity"]
    },
    "lifeSustainingTreatmentOption": {
      "type": "string",
      "enum": ["option-a", "option-b"]
    },
    "signedAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "if": {
    "required": ["channel"],
    "properties": {
      "channel": { "const": "online" }
    }
  },
  "then": {
    "properties": {
      "restrictionsAndConditions": {
        "type": "string"
      }
    }
  },
  "else": {
    "properties": {
      "restrictionsAndConditionsImages": {
        "type": "array",
        "items": {
          "$ref": "https://raw.githubusercontent.com/ministryofjustice/opg-data-lpa-store/d5d81b6df9a89aaa4c3634bfca31bfa3c1b1fd0d/docs/schemas/2024-10/file.json"
        }
      }
    }
  },
  "additionalProperties": false,
}
